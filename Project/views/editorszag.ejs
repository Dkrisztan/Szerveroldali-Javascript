<%- include('header') -%>

<center><h1><b>Ország Módosítása</b></h1></center>
<div>
  <form action="/" autocomplete="off" method="POST">
    <p>Ország neve:</p>
    <input type="text" id="nev" name="nev" value="<%= (typeof orszag === 'undefined') ? '' : orszag.nev %>"><br>
    <p>Szuvenír:</p>
    <input type="text" id="szuvenir" name="szuvenir" value="<%= (typeof orszag === 'undefined') ? '' : orszag.szuvenir %>"><br>
    <p>Rating:</p>
    <input type="text" id="rating" name="rating" value="<%= (typeof orszag === 'undefined') ? '' : orszag.rating %>" maxlength="4"><br><br>
    <input type="submit" value="Mentés">
  </form> 
</div>
<p style="padding-top: 15%; position: fixed; bottom: 0px; left: 10px"><a href="/" class="button primary new" style="text-decoration: none; background-color: #6fb872; font-size: 20px; font-family: Fredoka;">&#8617; Vissza</a></p>

<%- include('footer') -%>